-- Services
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

-- Player Variables
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local camera = game:GetService("Workspace").CurrentCamera

-- Path to RingPickups
local interiors = workspace:FindFirstChild("Interiors")
local blossomShakedownInterior = interiors and interiors:FindFirstChild("BlossomShakedownInterior")
local ringPickups = blossomShakedownInterior and blossomShakedownInterior:FindFirstChild("RingPickups")

-- Function to Teleport to a Target Position Instantly (Only HumanoidRootPart)
local function teleportTo(targetCFrame)
    local newCFrame = targetCFrame
    newCFrame = CFrame.new(newCFrame.Position, humanoidRootPart.Position + humanoidRootPart.CFrame.LookVector) -- Keep facing direction
    humanoidRootPart.CFrame = newCFrame
end

-- Notify player before starting the loop
StarterGui:SetCore("SendNotification", {
    Title = "Execute When Playing",
    Text = "Pls Play the minigame first",
    Duration = 10
})

-- Main Loop to Teleport to Each Ring Model
if ringPickups then
    while true do
        for _, model in ipairs(ringPickups:GetChildren()) do
            if model:IsA("Model") and model.PrimaryPart then
                local targetCFrame = model.PrimaryPart.CFrame + Vector3.new(0, 3, 0) -- Adjust height if necessary
                teleportTo(targetCFrame)
                wait(0.3) -- 0.3-second delay before moving to the next ring
            end
        end
    end
else
    warn("RingPickups folder not found in BlossomShakedownInterior!")
end
